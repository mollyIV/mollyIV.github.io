<ul class="posts">
    {%- for post in postslist | reverse %}
        <li class="post">
            <a href="{{ post.url }}">{{ post.data.title }}</a>
            <time datetime="{{ post.date | htmlDateString }}" class="meta">{{ post.date | readableDate("yyyy-LL-dd") }}</time>
        </li>
    {%- endfor %}
</ul>